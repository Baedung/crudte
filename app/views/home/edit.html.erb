<div class="container" style="margin-top:50px;">

    <form action="/update/<%= @one_post.id %>" method="POST">
      
          <div class="form-group">
            <label for="exampleInputEmail1"><h3>제목</h3></label>
            <input type="text" name="title" class="form-control" id="exampleInputEmail1" value="<%= @one_post.title %>">
          </div>
          
         <div class="form-group">
            <label for="exampleInputEmail1"><h3>내용</h3></label>  
            <textarea name="content" class="form-control" rows="5" id="comment"><%= @one_post.content %></textarea>
         </div>
     
         <button type="submit" class="btn btn-warning" style="margin-top:20px;">수정</button>
          
          
    </form>

</div>