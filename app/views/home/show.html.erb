<div class="container" style="margin-top:50px;">

    <form action="/" method="GET">
      
          <div class="form-group"><br>
            <label for="exampleInputEmail1"><h3>제목</h3></label>
            <input type="text" name="title" class="form-control" id="exampleInputEmail1" value="<%= @one_post.title %>" readonly>
          </div>
          
         <div class="form-group">
            <label for="exampleInputEmail1"><h3>내용</h3></label>  
            <textarea name="content" class="form-control" rows="5" id="comment" readonly><%= @one_post.content %></textarea>
         </div>
          <a href="/edit/<%= @one_post.id %>"><button class="btn btn-warning" style="margin-top:20px;">수정</button></a>
          
          <a href="/destroy/<%= @one_post.id %>"><button class="btn btn-danger" style="margin-top:20px;">삭제</button></a>
          
          <button class="btn btn-link" style="margin-top:20px;">뒤로가기</button>
          
    </form>
    
    <form action="/comment/<%= @one_post.id %>" method="POST">
        <br>
        
        <h3>댓글</h3>
        
        
        <input type="text" name="body" class="form-control" style="height:100px"> 
        
        <button type="submit" class="btn btn-default" style="margin-top:20px;">댓글쓰기</button>
        
    </form>
    
    <hr>
    <% @comments.each do |c| %>
       
       <%= c.body %> - <%= c.id %>번째 댓글
   
        <hr>
    <% end %>
    
</div>